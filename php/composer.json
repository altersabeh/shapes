{
  "name": "shapes/shapes",
  "version": "1.0.0",
  "bin": [ "bin/shapes-app" ],
  "autoload": {
    "psr-4": {
      "Shapes\\": "src/"
    },
    "files": [ "src/Client/Shell/InputReader.php" ]
  },
  "autoload-dev": {
    "psr-4": {
      "Shapes\\Tests\\": "tests/"
    },
    "files": [ "tests/Fixtures/Fixtures.php" ]
  },
  "scripts": {
    "fmt": "npx prettier bin/ src/ tests/ --write && composer fmt:cs",
    "fmt:cs": "php-cs-fixer fix --allow-risky=yes . && php-cs-fixer fix --allow-risky=yes bin/shapes-app",
    "lint": "psalm",
    "start": "@php bin/shapes-app",
    "test": "phpunit --colors=always"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "vimeo/psalm": "^6.9",
    "friendsofphp/php-cs-fixer": "^3.75"
  }
}
